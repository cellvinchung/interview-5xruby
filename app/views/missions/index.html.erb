<%= link_to "#{t("new")}#{Mission.model_name.human}", new_mission_path%>
<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.label :status_eq %>
  <%= select(:q, :status_eq, Mission.statuses.map{|k,v| [Mission.human_attribute_name(:"status/#{k}"),v]}, include_blank: t("all")) %>
  <%= f.label :priority_eq %>
  <%= select(:q, :priority_eq, Mission.priorities.map{|k,v| [Mission.human_attribute_name(:"priority/#{k}"),v]}, include_blank: t("all")) %>
  <%= f.button t("submit")  %>
<% end %>
<table>
    <thead>
    <tr>
        <th><%= Mission.human_attribute_name(:name)%></th>
        <th>
            <%= sort_link(@q, :start_at, Mission.human_attribute_name(:start_at), default_order: :desc) %>
        </th>
        <th>
            <%= sort_link(@q, :end_at, Mission.human_attribute_name(:end_at), default_order: :desc) %>
        </th>
        <th>
            <%= sort_link(@q, :priority, Mission.human_attribute_name(:priority), default_order: :asc) %>
        </th>
        <th><%= Mission.human_attribute_name(:status)%></th>
        <th>
            <%= sort_link(@q, :created_at, Mission.human_attribute_name(:created_at), default_order: :desc) %>
        </th>
        <th><%= t("action")%></th>
    </tr>
    </thead>
    <tbody>
        <% @missions.each do |mission|%>
        <tr>
            <td>
                <%= mission.name%>
            </td>
            <td>
                <%= mission.start_at&.strftime("%F %R")%>
            </td>
            <td>
                <%= mission.end_at&.strftime("%F %R")%>
            </td>
            
            <td>
                <%= Mission.human_attribute_name("priority/#{mission.priority}")%>
            </td>
            <td>
                <%= Mission.human_attribute_name("status/#{mission.status}")%>
            </td>
            <td>
                <%= mission.created_at.strftime("%F %R")%>
            </td>
            <td>
            <%= link_to t("show"), mission_path(mission)%>
            <%= link_to t("edit"), edit_mission_path(mission)%>
            <%= link_to t("destroy"), mission_path(mission), method: :delete, data: {confirm: t("confirm")}%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>