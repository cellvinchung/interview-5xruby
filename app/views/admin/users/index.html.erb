<%= link_to "#{t("new")}#{User.model_name.human}", new_admin_user_path, class: "btn btn-primary"%>
<div class="card">
<div class="card-header">
    <%= User.model_name.human%><%= t("index")%>
</div>
<table class="table">
    <thead>
    <tr>
        <th><%= User.human_attribute_name(:name)%></th>
        <th><%= User.human_attribute_name(:email)%></th>
        <th><%= User.human_attribute_name(:missions_count)%></th>
        <th><%= User.human_attribute_name(:role)%></th>
        <th><%= t("action")%></th>
    </tr>
    </thead>
    <tbody>
        <% @users.each do |user|%>
        <tr>
            <td>
                <%= user.name%>
            </td>
            <td>
                <%= user.email%>
            </td>
            <td>
                <%= user.missions_count%>
            </td>
            <td>
                <%= User.human_attribute_name("role/#{user.role}")%>
            </td>
            <td>
            <%= link_to t("show"), admin_user_path(user), class: "btn btn-info", data: {toggle: :tooltip, title: t("show")}%>
            <%= link_to t("edit"), edit_admin_user_path(user), class: "btn btn-warning", data: {toggle: :tooltip, title: t("edit")}%>
            <%= link_to t("destroy"), admin_user_path(user), method: :delete, data: {confirm: t("confirm")}, class: "btn btn-danger", data: {toggle: :tooltip, title: t("destroy")}%>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @users %>
</div>